<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white_color"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/margin_10_dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5_dp"
        android:orientation="vertical"
        android:padding="@dimen/margin_10_dp">

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/font_size_20_sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Aftab Alam Patel" />

        <TextView
            android:id="@+id/father_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5_dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/font_size_17_sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Son of Dastageer" />

    </LinearLayout>

</androidx.cardview.widget.CardView>